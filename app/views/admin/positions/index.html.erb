<h1>Listing positions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.name %></td>
        <td><%= position.short_name %></td>
        <td><%= link_to 'Show', [:admin, position] %></td>
        <td><%= link_to 'Edit', edit_admin_position_path(position) %></td>
        <td><%= link_to 'Destroy', [:admin, position], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

