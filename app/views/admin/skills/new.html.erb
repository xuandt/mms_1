<% provide(:title, 'New skill') %>
<h1>New skill</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for [:admin, @skill] do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
      <%= f.submit "Create new skill", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>