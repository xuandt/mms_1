<h1>Listing members</h1>
<div id="search">
  <%= render :partial => 'admin/members/search' %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= link_to 'Show', [:admin, member] %></td>
        <td><%= link_to 'Edit', edit_admin_member_path(member) %></td>
        <td><%= link_to 'Destroy', [:admin, member], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>
<%= will_paginate @members %>